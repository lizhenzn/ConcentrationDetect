<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.TrainModelActivity">
    <ImageView
        android:id="@+id/train_photo_iv"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/detect"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="240dp"/>

    <LinearLayout
        android:id="@+id/gray_ll"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/concen_ll"
        app:layout_constraintTop_toBottomOf="@id/train_photo_iv"
        app:layout_constraintHorizontal_weight="1"
        android:orientation="horizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content">
        <TextView
            android:text="灰度值："
            android:layout_marginLeft="6dp"
            android:textSize="24sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/train_gray_value_et"
            android:textSize="24sp"
            android:hint="灰度值"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/concen_ll"
        app:layout_constraintLeft_toRightOf="@id/gray_ll"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/train_photo_iv"
        app:layout_constraintHorizontal_weight="1"
        android:orientation="horizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/train_result_tv"
            android:text="此点浓度值："
            android:gravity="center_vertical"
            android:textSize="24sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/train_concentration_value_et"
            android:textSize="24sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <Button
        android:id="@+id/train_choose_photo_btn"
        android:text="选择图片"
        app:layout_constraintTop_toBottomOf="@id/concen_ll"
        app:layout_constraintRight_toLeftOf="@id/train_add_btn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/train_add_btn"
        android:text="加入训练集"
        app:layout_constraintTop_toBottomOf="@id/concen_ll"
        app:layout_constraintLeft_toRightOf="@id/train_choose_photo_btn"
        app:layout_constraintRight_toRightOf="@id/train_btn"
        app:layout_constraintHorizontal_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/train_btn"
        android:text="训练"
        app:layout_constraintTop_toBottomOf="@id/concen_ll"
        app:layout_constraintLeft_toRightOf="@id/train_add_btn"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:id="@+id/train_ll"
        app:layout_constraintTop_toBottomOf="@id/train_add_btn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <ListView
            android:id="@+id/train_lv"
            app:layout_constraintTop_toBottomOf="@id/train_add_btn"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>